<% flash.each do |key, value| %>
  $(function(){
    var addclass = "bg-info";
    if("alert" === "<%= key %>") {
      addclass = "bg-warning";
    }
    new PNotify({
      text: "<%= value %>",
      addclass: "stack-custom-bottom " + addclass,
      width: "100%",
      cornerclass: "no-border-radius",
      delay: 3000,
      stack: {"dir1": "up", "dir2": "right", "spacing1": 1}
    });
  });
<% end %>
